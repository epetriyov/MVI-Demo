<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/title_block"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/title_profile_aims" />

    <ImageButton
        android:id="@+id/btn_edit_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_pencil"
        app:layout_constraintBottom_toBottomOf="@id/title_block"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/title_block" />

    <TextView
        android:id="@+id/title_info_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorBrown"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/title_block"
        app:layout_constraintTop_toBottomOf="@id/title_block"
        tools:text="@string/aims_description" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chips_block"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        app:layout_constraintEnd_toEndOf="@id/btn_edit_info"
        app:layout_constraintStart_toStartOf="@id/title_block"
        app:layout_constraintTop_toBottomOf="@id/title_info_description"
        app:singleLine="true" />
</androidx.constraintlayout.widget.ConstraintLayout>