<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/label_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_my_message"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.67"
        android:paddingBottom="20dp"
        tools:text="Извините, Адель, я отвечу вам чуть позже. Сейчас я работаю над экранами коннекта." />


    <TextView
        android:id="@+id/label_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/colorOneMoreGrey2"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/label_message"
        tools:text="13:54"
        app:layout_constraintEnd_toEndOf="@id/label_message" />

</androidx.constraintlayout.widget.ConstraintLayout>