<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/label_place"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="54dp"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Парк-отель Barvikha Luxury Village" />

    <TextView
        android:id="@+id/label_top"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:textColor="@color/colorBlue"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@id/label_place"
        app:layout_constraintStart_toStartOf="@id/label_place"
        app:layout_constraintTop_toBottomOf="@id/label_place"
        tools:text="8-й км Рублево-Успенского шоссе" />

    <ImageView
        android:id="@+id/left_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/label_place"
        app:layout_constraintTop_toTopOf="@id/label_place"
        app:layout_constraintBottom_toBottomOf="@id/label_place"
        tools:src="@drawable/ic_pin_blue" />
</androidx.constraintlayout.widget.ConstraintLayout>